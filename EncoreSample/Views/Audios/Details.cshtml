@model EncoreSample.Models.Audio

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Audio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Song)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Song)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalArtist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OriginalArtist)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubmittedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubmittedOn)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AudioId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h2>Comments</h2>
<form asp-controller="Comments" asp-action="Create" method="post">
    <div class="form-group">
        <input class="form-control" type="hidden" id="AudioId" name="AudioId" value="@Model?.AudioId" />
        <input class="form-control" type="text" id="Message" name="Message" />
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>


<div>
    @foreach(var item in Model.Comments)
    {
        <div class="row">
            <div class="col">
                <p>@item.User.Email</p>
            </div>
            <div class="col-8">
                <p>@item.Message</p>
            </div>
        </div>
        
    }
</div>